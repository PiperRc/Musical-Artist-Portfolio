---
import Template from "../layouts/Template.astro";
---

<Template>
    <section class="contact">
        <h1>GET IN TOUCH
            <span>WITH LADY GYPSY</span>
        </h1>

        <p class="phone"> 
            <i class="fa-solid fa-phone phone-icon icon"></i>    : xxx-xxx-xxx
        </p>

        <p class="email">
            <i class="fa-solid fa-envelope email-icon icon"></i>   : xxx@xxx.com
        </p>

        <p class="form-option"> or fill out the contact form below:</p>


        <form action="https://api.web3forms.com/submit" method="POST">


            <input type="hidden" name="access_key" value="1559e601-1e30-4ee0-be81-9d97afc7434a">
            <input type="text" id="name" name="name" placeholder="Name*" required>

            <input type="email" id="email" name="email" placeholder="Email*" required>

            <textarea name="message" id="message" cols="30" rows="20" placeholder="Message*"
                required></textarea>

            <input type="hidden" name="redirect" value="https://theladygypsy.netlify.app/success">
            <button>SEND</button>
        </form>
    </section>




</Template>